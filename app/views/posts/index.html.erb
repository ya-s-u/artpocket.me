<%= render 'templates/header_long' %>
<div class="index">
	<ul class="index_list">
    <% @posts.each do |post| %>
      <li>
        <strong class="index_list_new"><span class="index_list_new_inner"></span><span class="index_list_new_text">人気</span></strong>
        <%= link_to post_path(post.id) do %>
          <%= image_tag(post.pictures[0].image.url(:pc_thumb)) %>
        <% end %>
        <p class="index_list_title"><%= truncate(post.title, :length=>35) %></p>
        <p class="index_list_data"><%= post.open_date %> 〜 <%= post.close_date %></p>
        <p class="index_list_text"><%= truncate(post.body, :length=>50) %></p>
      </li>
    <% end %>
	</ul>
</div>
