<div class="header">
  <div class="container">
    <h1 class="header_logo"><%= image_tag 'logo.png'%></h1>
    <ul class="nav">
      <li>このサイトとは</li>
      <li>利用規約</li>
      <li>お問い合わせ</li>
    </ul>
    <ul class="category">
      <li class="active">デザイン・イラスト</li>
      <li>デザイン・イラスト</li>
      <li>デザイン・イラスト</li>
      <li>デザイン・イラスト</li>
      <li>デザイン・イラスト</li>
    </ul>
  </div>
</div>
<div class="detail">
	<div class="container">
		<div class="detail_left">
			<ul class="detail_left_picts">
        <% @post.pictures.each do |image| %>
				  <li><%= image_tag(image.authenticated_image_url(:pc_large)) %></li>
        <% end %>
			</ul>
		</div>
		<div class="detail_right_wrap">
			<div class="detail_right">
				<h2 class="detail_right_title"><%= @post.title %></h2>
				<ul class="detail_right_sns">
					<li class="twitter"></li>
					<li class="facebook"></li>
					<li class="google"></li>
					<li class="hatena"></li>
				</ul>
				<p class="detail_right_summary"><%= simple_format @post.body %></p>
				<table class="detail_right_info">
					<tbody>
						<tr>
							<th>開催日</th>
							<td>
                <%= @post.open_date %> 〜 <%= @post.close_date %>
                </br>
                <%= @post.open_time %> 〜 <%= @post.close_time %>
              </td>
						</tr>
						<tr>
							<th>開催場所</th>
							<td></td>
						</tr>
						<tr>
							<th>URL</th>
							<td><%= @post.url %></td>
						</tr>
						<tr>
							<th>Facebook</th>
							<td><%= @post.facebook %></td>
						</tr>
						<tr>
							<th>Twitter</th>
							<td><%= @post.twitter %></td>
						</tr>
						<tr>
							<th>料金</th>
							<td><%= @post.charge %></td>
						</tr>
						<tr>
							<th>主催</th>
							<td><%= @post.promoter %></td>
						</tr>
						<tr>
							<th>お問い合わせ</th>
							<td><%= @post.mail %></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="detail_bottom">
		<div class="container">
			<div id="map" class="detail_bottom_map" style="width: 100%; height: 300px;"></div>
		</div>
	</div>
</div>
