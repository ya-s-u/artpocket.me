<div class="show">
	<div class="show_left">
		<ul class="show_left_picts">
      <% @post.pictures.each do |picture| %>
			  <li><%= image_tag(picture.image.url(:pc_large)) %></li>
      <% end %>
		</ul>
	</div>
	<div class="show_right_wrap">
		<div class="show_right">
			<h2 class="show_right_title"><%= @post.title %></h2>
			<ul class="show_right_sns">
				<li class="twitter"></li>
				<li class="facebook"></li>
				<li class="google"></li>
				<li class="hatena"></li>
			</ul>
			<p class="show_right_body"><%= simple_format @post.body %></p>
			<table class="show_right_info">
				<tbody>
					<tr>
						<th>開催日</th>
						<td>
              <%= @post.open_date %> 〜 <%= @post.close_date %>
              </br>
              <%= @post.open_time %> 〜 <%= @post.close_time %>
            </td>
					</tr>
					<tr>
						<th>開催場所</th>
						<td></td>
					</tr>
					<tr>
						<th>URL</th>
						<td><%= @post.url %></td>
					</tr>
					<tr>
						<th>Facebook</th>
						<td><%= @post.facebook %></td>
					</tr>
					<tr>
						<th>Twitter</th>
						<td><%= @post.twitter %></td>
					</tr>
					<tr>
						<th>料金</th>
						<td><%= @post.charge %></td>
					</tr>
					<tr>
						<th>主催</th>
						<td><%= @post.promoter %></td>
					</tr>
					<tr>
						<th>お問い合わせ</th>
						<td><%= @post.mail %></td>
					</tr>
				</tbody>
			</table>
      <table class="show_right_calendar">
        <tbody>
          <tr>
            <th>開催日</th>
            <td>
              <%= @post.open_date %> 〜 <%= @post.close_date %>
              </br>
              <%= @post.open_time %> 〜 <%= @post.close_time %>
            </td>
          </tr>
        </tbody>
      </table>
		</div>
	</div>
</div>
<div class="show_bottom">
		<div id="map" class="show_bottom_map" style="width: 100%; height: 300px;"></div>
</div>
<script type="text/javascript">
$(document).ready(function(){
	header = $('#Header');
	mainLeft = $('#mainLeft');
	mainRight = $('#mainRight');
	const mainLeftSize = mainLeft.height() + header.outerHeight(true) - $(window).height();
	const mainRightPosition = mainLeft.outerWidth(true);
	const mainRightSize = header.outerHeight(true) + mainRight.height() - $(window).height();

	$(window).scroll(function () {
		var scroll = $(this).scrollTop();

		if(scroll > mainLeftSize && scroll <= mainRightSize) {
			mainLeft.css('position', 'fixed');
			mainLeft.css('bottom', '0');
			mainRight.css('margin-left', mainRightPosition);
		} else if(scroll > mainRightSize) {
			mainLeft.css('position', 'absolute');
			mainLeft.css('bottom', '0');
			mainRight.css('margin-left', mainRightPosition);
		} else {
			mainLeft.css('position', 'static');
			mainRight.css('margin-left', '0');
		}

		if(scroll > mainRightSize) {
			mainTop.show();
		} else {
			mainTop.hide();
		}
	})
});

  var map;
  map = new GMaps({
   div: '#map',
   lat: 35.681382,
   lng: 139.766084,
   zoo: 16,
  });

  map.addMarker({
   lat: 35.681382,
   lng: 139.766084,
   title: '東京駅',
   infoWindow: {
     content: '<p>HTML Content</p>'
   }
  });

 $(".show_right_sns .twitter").socialbutton("twitter", {
   button : "horizontal",
   text : "つぶやきに含めるテキスト",
   url : "<%=request.url%>",
 }).width(95);

 $(".show_right_sns .facebook").socialbutton("facebook_like", {
   button : "button_count",
   url : "<%=request.url%>",
 }).width(110);

 $(".show_right_sns .google").socialbutton("google_plusone", {
   button : "medium",
   url : "<%=request.url%>",
   count : true,
 }).width(70);

 $(".show_right_sns .hatena").socialbutton("hatena", {
   button : "standard",
   url : "<%=request.url%>",
   title : "<%=@post.title%>",
 }).width(70);
</script>
